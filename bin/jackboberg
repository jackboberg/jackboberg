#!/usr/bin/env node

const minimist = require('minimist')
const { render } = require('prettyjson')

const data = require('../info.json')

const argvOpts = {
  alias: { json: 'j' }
}

const renderOpts = {
  dashColor: 'cyan',
  keysColor: 'blue',
  stringColor: 'white'
}

const argv = minimist(process.argv.slice(2), argvOpts)
const out = argv.json ? data : render(data, renderOpts)

console.log(out)
